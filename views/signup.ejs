  <!-- END NAVBAR -->
    <section>
      <div
        class="flex items-center justify-center py-14 lg:py-28 px-4 pt-20 sm:px-6 sm:pt-16 lg:px-8 lg:pt-24 bg-gray-100 dark:bg-gray-900 text-whitw dark:text-white"
      >
        <div class="w-full md:mx-auto md:w-full md:max-w-sm xl:max-w-md">
          <div class="mb-2 flex justify-center space-x-2">
            <a href="/" class="btn btn-ghost text-xl">
            <img width="50" height="50" src="https://img.icons8.com/clouds/30/apple-notes.png" alt="apple-notes"/>
              NoteBook</a
            >
          </div>
          <h2 class="text-center text-2xl font-bold leading-tight">
            Sign up to your account
          </h2>
          <p class="mt-2 text-center text-base">
            Already have an account?
            <a
              href="/sign-in"
              class="font-medium transition-all duration-200 hover:underline"
            >
              Sign In
            </a>
          </p>
          <form action="/users/sign-up" method="post" class="mt-8">
            <div class="space-y-5">
              <div>
                <label
                  for="fullName"
                  class="text-base font-medium"
                >
                  Full Name
                </label>
                <div class="mt-2">
                  <input
                    class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                    type="text0"
                    placeholder="Full Name"
                    id="fullName"
                    name="fullName"
                    required
                  />
                </div>
              </div>
              <div>
                <label for="email" class="text-base font-medium">
                  Email address
                </label>
                <div class="mt-2">
                  <input
                    class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                    type="email"
                    placeholder="Email"
                    id="email"
                    name="email"
                    required
                  />
                </div>
              </div>
              <div>
                <div class="flex items-center justify-between">
                  <label
                    for="password"
                    class="text-base font-medium"
                  >
                    Password
                  </label>
                </div>
                <div class="mt-2">
                  <input
                    class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-2 text-sm placeholder:text-gray-400 focus:outline-none focus:ring-1 focus:ring-gray-400 focus:ring-offset-1 disabled:cursor-not-allowed disabled:opacity-50"
                    type="password"
                    placeholder="Password"
                    id="password"
                    name="password"
                    required
                  />
                </div>
              </div>
                <button
                  type="submit"
                  class="inline-flex w-full items-center justify-center rounded-md bg-black px-3.5 py-2.5 font-semibold leading-7 text-white hover:bg-black/80"
                >
                  Get started
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="ml-2"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>

